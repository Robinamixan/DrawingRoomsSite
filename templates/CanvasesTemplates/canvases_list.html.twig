{% extends 'base.html.twig' %}

{% block title %}
    List of rooms
{% endblock title %}

{% block body %}

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8" >
            <div id="list_rooms" class="list_rooms">
                <div class="count">
                    <h3>All canvases - {{ pagination.getTotalItemCount }}</h3>
                </div>
                <div id="rooms_control_panel">
                    <a class="btn btn-default" href="{{ path('canvas_add', {'id_room': idRoom}) }}">New Canvas</a>
                </div>
                <div id="postlist">
                    {% for canvas in pagination %}
                        <div class="panel">
                            <div class="panel-heading">
                                <div class="text-center">
                                    <div class="row">
                                        <div class="col-sm-9">
                                            <a class="pull-left" href="{{ path('room_canvas', {'id_canvas': canvas.idCanvas}) }}" style="color: black; font-family: 'Raleway', sans-serif;">{{ canvas.canvasName }}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="panel-body">
                                {% if canvas.image %}
                                    <img class="image_preview" src="{{canvas.image}}" alt="preview" style="height: 100px; width: 200px">
                                {% else %}
                                    <span style="color: black">Empty canvas!</span>
                                {% endif %}

                            </div>

                            <div class="panel-footer" style="height: 50px; padding-top: 6px">
                                <a class="btn btn-default" href="{{ path('canvas_edit', {'id_room': idRoom, 'id_canvas': canvas.idCanvas}) }}">Edit</a>
                                <a class="btn btn-default" href="{{ path('canvas_delete', {'id_room': idRoom, 'id_canvas': canvas.idCanvas}) }}">Delete</a>
                            </div>
                        </div>

                    {% endfor %}
                </div>
                {{ knp_pagination_render(pagination) }}
            </div>

        </div>

        <div class="col-md-2"></div>
    </div>

    {# display navigation #}
    <div class="navigation">

    </div>

{% endblock body %}

{% block stylesheets %}
    <style>
        #rooms_control_panel {
            margin: 10px;
        }

        .list_rooms {
            border: 2px solid grey;
            border-radius: 15px;
            padding: 10px;
            background-color: #384452;
            margin-bottom: 15px;
        }

        #list_rooms .count h3 {
            color: white;
        }

        .image_preview {
            border: black solid 1px;
        }

        .label_info {
            border: 1px solid grey;
            border-radius: 5px;
            padding: 5px;
            margin-top: 0;
            margin-right: 3px;
            color: white;
        }

        .label_info.pass {
            background-color: green;
        }

        .label_info.nopass {
            background-color: #0b6ec4;
        }
    </style>
{% endblock  stylesheets%}



